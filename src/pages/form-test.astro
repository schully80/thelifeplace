---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout title="Form Design Test">
  <section class="max-w-3xl mx-auto px-4 py-12 space-y-8">
    <h1 class="text-3xl font-bold text-brand-red">Form Style Playground</h1>
    <p class="text-gray-700">Try out different form styles and layouts below.</p>

    <!-- Drop test form blocks here -->
    <div class="bg-gray-100 p-6 rounded-2xl shadow-inner space-y-6 max-w-md mx-auto">
  <h2 class="text-xl font-bold text-gray-800">Neumorphic Form</h2>
  <input type="text" placeholder="Your Name" class="w-full px-4 py-2 rounded-xl bg-gray-200 shadow-inner focus:shadow-md focus:outline-none" />
  <input type="email" placeholder="Email Address" class="w-full px-4 py-2 rounded-xl bg-gray-200 shadow-inner focus:shadow-md focus:outline-none" />
  <button class="w-full py-2 rounded-xl bg-brand-red text-white font-semibold shadow hover:shadow-lg transition">Submit</button>
</div>
  </section>
</BaseLayout>