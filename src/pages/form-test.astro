---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Form Design Test">
  <section class="max-w-3xl mx-auto px-4 py-12 space-y-8">
    <h1 class="text-3xl font-bold text-brand-red">Form Style Playground</h1>
    <p class="text-gray-700">Try out different form styles and layouts below.</p>

    <!-- Drop test form blocks here -->
<div class="bg-white p-6 rounded-xl shadow-sm space-y-6 max-w-md mx-auto font-sans text-gray-900">
  <h2 class="text-2xl font-light tracking-wide">Register</h2>

  <input type="text" placeholder="Name *" class="w-full border-b border-gray-300 py-2 text-lg focus:outline-none focus:border-brand-red" />
  <input type="text" placeholder="Surname *" class="w-full border-b border-gray-300 py-2 text-lg focus:outline-none focus:border-brand-red" />
  <input type="tel" placeholder="Contact Number *" class="w-full border-b border-gray-300 py-2 text-lg focus:outline-none focus:border-brand-red" />
  <input type="email" placeholder="Email Address *" class="w-full border-b border-gray-300 py-2 text-lg focus:outline-none focus:border-brand-red" />

  <!-- CTA Button with Arrow -->
<button type="submit"
  class="w-full inline-flex justify-center items-center gap-2 rounded-full bg-brand-red text-white font-medium 
         px-6 py-3 shadow-md 
         transform transition-transform duration-300 hover:scale-105 
         hover:bg-red-700 hover:shadow-lg"
>
  <span>Save My Spot</span>
  <svg xmlns="http://www.w3.org/2000/svg" 
       class="h-6 w-6 animate-pulse" 
       fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
      d="M7 17L17 7M7 7h10v10" />
  </svg>
</button>
  </section>
</BaseLayout>