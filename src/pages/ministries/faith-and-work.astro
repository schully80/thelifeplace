---
import BaseLayout from "../../layouts/BaseLayout.astro";
import RegisterForm from "../../components/RegisterForm.astro";
---
<BaseLayout title="Faith & Work">
  <section class="container-x py-10 md:py-16 text-center">
    <div class="rounded-xl border bg-white p-5 md:p-6 shadow-sm ring-1 ring-warmgray-200">
      <!-- Stack on mobile to avoid crowding; original desktop layout preserved -->
      <div class="flex flex-col sm:flex-row items-center sm:items-start justify-between gap-3 sm:gap-4 mb-4">
        <!-- Heading: keep desktop as-is; mobile slightly smaller if you ever bump md size later -->
        <h1 class="text-3xl sm:text-5xl font-bold">Faith &amp; Work</h1>
        <span class="inline-block rounded-full bg-brand-red px-3 py-1 text-lg font-semibold text-white">
          Coming Soon
        </span>
      </div>

      <!-- Body copy: mobile smaller, desktop unchanged (was text-lg everywhere) -->
      <p class="text-lg md:text-xl text-warmgray-700 leading-7 md:leading-8">
        Equipping believers to integrate their faith with their daily work and calling.<br />
        <em class="text-brand-red">Come. See. Jesus.</em>
      </p>
    </div>

    <!-- Registration Form -->
    <div class="mt-10 md:mt-12 max-w-2xl mx-auto px-4 md:px-0">
      <RegisterForm
        title="We'd love to see you â€” drop your details below"
        titleClass="text-xl md:text-2xl font-medium text-brand-warmgray-800 text-center mb-4"
        eventName="Faith & Work"
        paymentLink="/give"
        successMessage="Thank you for registering!"
        ctaText="Save My Spot"
        disabled={true}
         showNotice={true}
        fields={[
          { id: "firstName", label: "Name", type: "text", required: true },
          { id: "surname", label: "Surname", type: "text", required: true },
          { id: "contact", label: "Contact Number", type: "tel", required: true },
          { id: "email", label: "Email Address", type: "email", required: true },
          { id: "streetAddress", label: "Street Address", type: "text", required: true },
          { id: "suburb", label: "Suburb", type: "text", required: true },
          { id: "city", label: "City", type: "text", required: true },
          { id: "postalCode", label: "Postal Code", type: "text", required: true, minlength: 3, maxlength: 10, pattern: ".{3,10}" },
          { id: "attendees", label: "Number of People Attending", type: "number", required: true, min: 1 }
        ]}
      />
    </div>
  </section>
</BaseLayout>
