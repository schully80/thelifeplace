---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="The Life Place">
  <!-- HERO / Welcome -->
  <section class="relative bg-white">
    <div class="container-x py-10 md:py-20 grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-10 items-center">
      <!-- Left: Welcome copy + CTAs -->
      <div>
        <!-- Title -->
        <!-- Mobile smaller (3xl), Desktop unchanged (4xl) -->
        <h1 class="text-center text-3xl md:text-4xl leading-tight font-bold">
          Our Welcome
        </h1>

        <!-- Welcome paragraph -->
        <!-- Mobile smaller (base), Desktop unchanged (md:text-2xl) -->
        <p class="mt-6 md:mt-7 text-warmgray-700 text-lg md:text-2xl font-sans text-center leading-7 md:leading-[1.8]">
          We open wide our doors with a welcome from
          <span class="text-brand-red font-semibold">Jesus</span>, <br />
          the <span class="text-brand-red font-semibold">Embracer</span> of the outsider, <br />
          the <span class="text-brand-red font-semibold">Defender</span> of the guilty, <br />
          the <span class="text-brand-red font-semibold">Justifier</span> of the ungodly, <br />
          the <span class="text-brand-red font-semibold">Friend</span> of sinners.
        </p>

        <!-- Slogan under heading -->
        <!-- Mobile smaller (base), your original desktop kept via sm:2xl -->
        <p class="mt-5 md:mt-6 text-base sm:text-2xl text-center text-gray-700">
          Come. See. <span class="text-[#B3282D]">Jesus</span>
        </p>

        <div class="mt-6 md:mt-8 flex flex-wrap justify-center gap-3">
          {/*
          Example CTAs (kept optional)
          <a href="/visit/" class="btn btn-primary">Plan Your Visit</a>
          <a href="/what-to-expect/" class="btn btn-ghost">Learn More</a>
          */}
        </div>
      </div>

      <!-- Right: Image -->
      <!-- Desktop unchanged; mobile keeps full width with softer spacing -->
      <div class="aspect-[16/10] rounded-xl overflow-hidden shadow-lg">
        <img
          src="/hero.jpg"
          alt="Welcome to The Life Place"
          class="w-full h-full object-cover opacity-95"
          loading="eager"
          decoding="async"
        />
      </div>
    </div>
  </section>
</BaseLayout>
