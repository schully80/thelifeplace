---
import BaseLayout from "../../layouts/BaseLayout.astro";
---
<BaseLayout title="Generosity">
  <section class="container-x py-10 md:py-14">
    <p class="text-2xl md:text-2xl font-medium tracking-wide">
      Your generosity helps others to <span class="text-gray-800">Come. See. <span class="text-[#B3282D]">Jesus</span>
    </p>
    

    <div class="grid gap-10 md:gap-20 md:grid-cols-2 items-start mt-8">
      <!-- EFT (title outside card) -->
      <div>
        <h2 class="text-2xl md:text-2xl font-medium mb-4 text-center md:text-center">EFT Banking Details</h2>
        <div class="rounded-xl border-2 border-gray-300 p-6 md:p-8 bg-white shadow-sm">
          <div class="space-y-3 text-center md:text-lg">
            <div><span class="font-semibold">Account Name:</span> The Life Place</div>
            <div><span class="font-semibold">Bank:</span> Standard Bank</div>
            <div><span class="font-semibold">Account Number:</span> 30&nbsp;152&nbsp;4351</div>
            <div><span class="font-semibold">Branch Code:</span> 051001</div>
            <div><span class="font-semibold">Account Type:</span> Cheque</div>
            <div><span class="font-semibold">SWIFT:</span> SBZA&nbsp;ZA&nbsp;JJ</div>
          </div>
        </div>
      </div>

      <!-- QR (title outside card) -->
      <div>
        <h2 class="text-2xl md:text-2xl font-medium mb-4 text-center md:text-center">Scan to give via Paystack</h2>
        <div class="grid grid-cols-2 gap-6 md:gap-8">
          <!-- Tithes -->
          <figure class="flex flex-col items-center justify-center text-center rounded-xl border-2 p-6 shadow bg-white">
            <div class="flex items-center justify-center w-56 md:w-64 aspect-square">
              <img src="/paystack-qr-tithes.png" alt="Paystack QR — Tithes" class="max-w-full max-h-full object-contain" loading="lazy" />
            </div>
            <figcaption class="mt-3 text-sm md:text-base">Tithes</figcaption>
          </figure>
          <!-- Offerings -->
          <figure class="flex flex-col items-center justify-center text-center rounded-xl border-2 p-6 shadow bg-white">
            <div class="flex items-center justify-center w-56 md:w-64 aspect-square">
              <img src="/paystack-qr-offerings.png" alt="Paystack QR — Offerings" class="max-w-full max-h-full object-contain" loading="lazy" />
            </div>
            <figcaption class="mt-3 text-sm md:text-base">Offerings</figcaption>
          </figure>
        </div>
        <p class="mt-6 text-gray-600 text-sm">Open your banking app and scan the relevant QR to give securely.</p>
      </div>
    </div>
  </section>
</BaseLayout>
---