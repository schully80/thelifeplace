---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { site } from "../../../site.config.js";
---

<BaseLayout title="Plan a Visit">
  <section class="container-x py-14 md:py-20">
    <h1 class="text-3xl md:text-4xl font-medium text-center">Plan a Visit</h1>

    <!-- Slogan under heading -->
    <p class="mt-6 text-lg sm:text-2xl text-center text-gray-700">
      Come. See. <span class="text-[#B3282D]">Jesus</span>
    </p>
        
    <p class="mt-4 mb-8 text-center text-2xl md:text-xl">
      1 Elm Avenue, Craigavon AH, 2191, Sandton 
    </p>

    <div class="text-xl flex justify-center gap-4">
      <a class="btn btn-outline" href={`mailto:${site.contact.email}`}>
        email us @hello@thelifeplace.org
      </a>
    </div>

    <!-- Typeform embed (responsive iframe) -->
    <div class="mt-10">
      <div class="mx-auto max-w-3xl">
        <div class="relative w-full" style="padding-top: 140%;">
          <!-- 140% gives a tall mobile-friendly form -->
          <iframe
            src="https://form.typeform.com/to/mtt49eHG"
            class="absolute inset-0 h-full w-full rounded-xl border"
            style="background:#fff;"
            allow="camera; microphone; autoplay; encrypted-media; fullscreen; clipboard-read; clipboard-write; geolocation"
          ></iframe>
        </div>
      </div>
    </div>

    <!-- Location Map -->
    <div class="mt-8 rounded-xl overflow-hidden shadow-lg">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3587.123456789!2d28.0123456!3d-26.0123456!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1e9576543210abcd%3A0xabcdef123456789!2sThe%20Life%20Place!5e0!3m2!1sen!2sza!4v1724234567890!5m2!1sen!2sza"
        width="100%"
        height="400"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade">
      </iframe>
    </div>
</BaseLayout>