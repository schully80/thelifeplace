---
import BaseLayout from "../../layouts/BaseLayout.astro";
import RegisterForm from "../../components/RegisterForm.astro";
import { site } from "../../../site.config.js";
---

<BaseLayout title="Plan a Visit">
  <section class="container-x py-14 md:py-20">
    <h1 class="text-3xl md:text-4xl font-medium text-center">Plan a Visit</h1>

    <p class="mt-6 text-lg sm:text-2xl text-center text-gray-700">
      Come. See. <span class="text-[#B3282D]">Jesus</span>
    </p>

    <p class="mt-4 mb-8 text-center text-2xl md:text-xl">
      1 Elm Avenue, Craigavon AH, 2191, Sandton 
    </p>

    <div class="text-xl flex justify-center gap-4">
      <a class="btn btn-outline" href={`mailto:${site.contact.email}`}>
        email us @hello@thelifeplace.org
      </a>
    </div>

    <RegisterForm
  title="We'd love to see you â€” drop your details below"
  eventName="Plan a Visit"
  paymentLink="/give"
  successMessage="Thank you for registering!"
  ctaText="Connect With Us"
  disabled={false}
  showNotice={false} // ðŸ‘ˆ hides both messages
  fields={[
    { id: "firstName", label: "Name", type: "text", required: true },
    { id: "surname", label: "Surname", type: "text", required: true },
    { id: "contact", label: "Contact Number", type: "tel", required: true },
    { id: "email", label: "Email Address", type: "email", required: true },
    { id: "streetAddress", label: "Street Address", type: "text", required: true },
    { id: "suburb", label: "Suburb", type: "text", required: true },
    { id: "city", label: "City", type: "text", required: true },
    { id: "postalCode", label: "Postal Code", type: "text", required: true, minlength: 3, maxlength: 10, pattern: ".{3,10}" }
  ]}
/>

    <!-- Location Map -->
    <div class="mt-8 rounded-xl overflow-hidden shadow-lg">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3587.123456789!2d28.0123456!3d-26.0123456!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1e9576543210abcd%3A0xabcdef123456789!2sThe%20Life%20Place!5e0!3m2!1sen!2sza!4v1724234567890!5m2!1sen!2sza"
        width="100%"
        height="400"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade">
      </iframe>
    </div>
</BaseLayout>