---
import BaseLayout from "../layouts/BaseLayout.astro";

const url = new URL(Astro.request.url);
const event = url.searchParams.get("event");

const thankYouMessage =
  event === "Giving"
    ? "Thank you for your giving. Your generosity is deeply appreciated."
    : event === "Donation"
    ? "Thank you for your donation. You’re helping us reach more lives with grace."
    : event === "Registration"
    ? "Your registration has been received. We’re excited to welcome you to The Life Place."
    : "Thank you! We’ve received your submission.";
---

<BaseLayout title="Thank You">
  <section class="container-x py-14 md:py-20 text-center">
    <!-- Heading -->
    <!-- Mobile slightly smaller, desktop unchanged -->
    <h1 class="text-3xl md:text-5xl font-bold text-brand-red mb-5 md:mb-6">
      Thank You!
    </h1>

    <!-- Message -->
    <!-- Mobile base, desktop unchanged -->
    <p class="text-base md:text-lg text-brand-warmgray-700 mt-5 md:mt-6 leading-7 md:leading-8">
      {thankYouMessage}
    </p>

    <!-- CTAs -->
    <div class="mt-5 md:mt-6 text-center space-y-3 md:space-y-0 md:space-x-4">
      {event === "Giving" && (
        <a href="/give" class="btn btn-outline">Give Again</a>
      )}
      {event === "Registration" && (
        <a href="/plan-a-visit" class="btn btn-primary">Plan Another Visit</a>
      )}
    </div>
  </section>
</BaseLayout>
