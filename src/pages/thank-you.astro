---
import BaseLayout from "../../layouts/BaseLayout.astro";

const url = new URL(Astro.request.url);
const event = url.searchParams.get("event");

const thankYouMessage = event === "Giving"
  ? "Thank you for your giving. Your generosity is deeply appreciated."
  : event === "Donation"
  ? "Thank you for your donation. You’re helping us reach more lives with grace."
  : event === "Registration"
  ? "Your registration has been received. We’re excited to welcome you to The Life Place."
  : "Thank you! We’ve received your submission.";
---

<BaseLayout title="Thank You">
  <section class="container-x py-20 text-center">
    <h1 class="text-4xl md:text-5xl font-bold text-brand-red mb-6">Thank You!</h1>
    <p class="text-xl md:text-2xl text-brand-warmgray-700 mb-8">
      Your registration has been received. We’re excited to welcome you to <strong>The Life Place</strong>.
    </p>

    <div id="thankYouMessage" class="hidden mt-10 text-center">
  <h2 class="text-2xl font-semibold text-brand-red mb-2">Thank You!</h2>
  <p class="text-lg text-brand-warmgray-700">
    {thankYouMessage}
  </p>
</div>
  </section>
</BaseLayout>