---
import BaseLayout from "../layouts/BaseLayout.astro";

const url = new URL(Astro.request.url);
const event = url.searchParams.get("event") ?? "Bring Them To Jesus";
---

<BaseLayout title="Thank You">
  <section class="max-w-2xl mx-auto px-4 py-12 text-center space-y-6">
    <h1 class="text-3xl font-bold text-brand-red">You're Registered!</h1>
    <p class="text-lg text-brand-warmgray-800">
      Thank you for registering for <strong>{event}</strong>.
    </p>
    <p class="text-md text-brand-warmgray-700">
      We’ll see you on <strong>Saturday, Sept 14</strong> at <strong>The Life Place, Sandton</strong>.
    </p>
    <p class="text-sm text-brand-warmgray-600 italic">
      “Let the children come to me…” — Matthew 19:14
    </p>
    <a href="/" class="inline-block mt-6 px-6 py-3 bg-brand-red text-white rounded-full hover:bg-red-700 transition">
      Return to Home
    </a>
  </section>
</BaseLayout>