---
const { title = "Register", description = "Fill in your details below to save your spot." } = Astro.props;
---

<section class="max-w-2xl mx-auto px-4 py-12 animate-fade-in-up">
  <div class="bg-white p-6 rounded-xl shadow ring-1 ring-blue-200 space-y-6">
    <h2 class="text-2xl font-bold text-brand-red">{title}</h2>
    <p class="text-gray-700">{description}</p>

    <form class="space-y-4">
      <input type="text" name="fullName" placeholder="Full Name" class="form-field" required />
      <input type="tel" name="contact" placeholder="Contact Number" class="form-field" required />
      <input type="email" name="email" placeholder="Email Address" class="form-field" required />
      <input type="number" name="attendees" placeholder="Number of Persons Attending" class="form-field" min="1" required />

      <button type="submit" class="btn-brand">Save My Spot</button>
    </form>
  </div>
</section>